// Reglas temporales de Firestore para migración
// IMPORTANTE: Cambiar a reglas más restrictivas en producción

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura y escritura en todas las colecciones (temporal para migración)
    match /{document=**} {
      allow read, write: if true;
    }
    
    // En producción, usar reglas como:
