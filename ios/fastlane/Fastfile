default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :deploy do
    # Configure API Key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      is_key_content_base64: false,
      in_house: false
    )

    # The certificate is already imported in the keychain by the workflow
    # We just need to get/create the provisioning profile
    sigh(
      api_key: api_key,
      app_identifier: "com.autofirme.app",
      readonly: false
    )

    # Update the project to use the provisioning profile
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "./Runner.xcodeproj",
      team_id: ENV["APPLE_TEAM_ID"],
      profile_name: lane_context[SharedValues::SIGH_NAME],
      code_sign_identity: "iPhone Distribution"
    )

    # Build with the profile we just created
    build_app(
      scheme: "Runner",
      export_method: "app-store",
      workspace: "./Runner.xcworkspace",
      configuration: "Release",
      clean: true,
      output_directory: "./build",
      output_name: "autofirme.ipa",
      export_options: {
        method: "app-store",
        signingStyle: "manual",
        provisioningProfiles: {
          "com.autofirme.app" => lane_context[SharedValues::SIGH_NAME]
        }
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
