default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :deploy do
    # Configure API Key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      is_key_content_base64: false,
      in_house: false
    )

    # Create/download Distribution Certificate
    # This will create a new cert if needed and install it in the default keychain
    cert(
      api_key: api_key,
      output_path: "./build"
    )

    # Create/download App Store Provisioning Profile
    # This will create the profile matching the cert and app ID
    sigh(
      api_key: api_key,
      app_identifier: "com.autofirme.app",
      readonly: false, # Allow creation if it doesn't exist
      force: false # Try to use existing first
    )

    # Build with the profile we just created
    # ENV['SIGH_UUID'] is automatically set by sigh action
    build_app(
      scheme: "Runner",
      export_method: "app-store",
      workspace: "./Runner.xcworkspace",
      configuration: "Release",
      clean: true,
      output_directory: "./build",
      output_name: "autofirme.ipa",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "com.autofirme.app" => ENV["SIGH_UUID"]
        }
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
