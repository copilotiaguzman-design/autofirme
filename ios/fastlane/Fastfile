default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :deploy do
    # Configure API Key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      is_key_content_base64: false,
      in_house: false
    )

    # Build with automatic signing using Cloud Managed Distribution
    # This approach lets Apple manage the certificates and profiles via API Key
    build_app(
      scheme: "Runner",
      export_method: "app-store",
      workspace: "./Runner.xcworkspace",
      configuration: "Release",
      clean: true,
      output_directory: "./build",
      output_name: "autofirme.ipa",
      # Use xcodebuild's cloud-managed signing with API Key
      xcargs: "-allowProvisioningUpdates -authenticationKeyPath #{ENV['HOME']}/private_keys/AuthKey_#{ENV['APP_STORE_CONNECT_KEY_ID']}.p8 -authenticationKeyID #{ENV['APP_STORE_CONNECT_KEY_ID']} -authenticationKeyIssuerID #{ENV['APP_STORE_CONNECT_ISSUER_ID']}",
      export_xcargs: "-allowProvisioningUpdates -authenticationKeyPath #{ENV['HOME']}/private_keys/AuthKey_#{ENV['APP_STORE_CONNECT_KEY_ID']}.p8 -authenticationKeyID #{ENV['APP_STORE_CONNECT_KEY_ID']} -authenticationKeyIssuerID #{ENV['APP_STORE_CONNECT_ISSUER_ID']}"
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
