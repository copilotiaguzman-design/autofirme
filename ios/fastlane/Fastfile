default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :deploy do
    # 0. Setup Keychain explicitly
    # We create a custom keychain to avoid permission issues with the default login keychain
    keychain_name = "fastlane_build_keychain"
    keychain_password = "temp_password"
    
    create_keychain(
      name: keychain_name,
      password: keychain_password,
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false
    )
    
    # On macOS, keychains usually have a -db extension
    keychain_path = File.expand_path("~/Library/Keychains/#{keychain_name}-db")

    # 1. Configure API Key
    # Fastlane handles the key creation/auth automatically
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      is_key_content_base64: false, # We are passing raw PEM now
      in_house: false
    )

    # 2. Fetch/Create Certificate (cert)
    # This ensures we have a valid Distribution Certificate in the keychain.
    # If one exists on the portal but we don't have the private key, it will create a new one.
    get_certificates(
      output_path: "./build",
      force: false, # Try to download first, but will create if private key is missing locally
      keychain_path: keychain_path,
      keychain_password: keychain_password
    )

    # 3. Fetch/Create Provisioning Profile (sigh)
    # This ensures we have a valid App Store profile matching the certificate.
    get_provisioning_profile(
      app_identifier: "com.autofirme.app",
      type: "appstore",
      filename: "AppStore_com.autofirme.app.mobileprovision"
    )

    # 4. Build the App (gym)
    # We explicitly tell gym to use the profile we just fetched (ENV['SIGH_UUID'])
    build_app(
      scheme: "Runner",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: { 
          "com.autofirme.app" => ENV["SIGH_UUID"] 
        }
      },
      xcargs: "CODE_SIGN_STYLE=Manual CODE_SIGN_IDENTITY='Apple Distribution' PROVISIONING_PROFILE_SPECIFIER='#{ENV['SIGH_UUID']}'"
    )

    # 5. Upload to TestFlight (Pilot)
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
